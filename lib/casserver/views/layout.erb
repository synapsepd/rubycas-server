<%# coding: UTF-8 -%>
<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
                      "XHTML1-s.dtd" >
<html xmlns="http://www.w3.org/TR/1999/REC-html-in-xml"
      xml:lang="en" lang="en" >

  <head>
    <title><%= escape_html @organization %><%= t.label.central_login_title %></title>
    <link rel="icon" type="image/png" href="<%= escape_html @uri_path %>/themes/<%= escape_html @theme %>/favicon.png" />
    <link href="<%= escape_html @uri_path %>/app.css" media="screen" rel="stylesheet" type="text/css">

  </head>

  <body onload="if (document.getElementById('username')) document.getElementById('username').focus()">

    <div id="hdr" class="container">

      <a id="logo" class="pull-left" href="#">
        <div id="logo_box" class="pull-left"></div>
        <span id="logo_text" class="pull-left visible-desktop">Synapse Central Login</span>
      </a>

      <a id="user_box" class="pull-right" href="#"><i class="icon-chevron-down"></i></a>
      <span id="user_text" class="pull-right visible-desktop">
        <% if @message[:type] == 'success'|| @message[:type] == 'notice' %>
          You are logged in as <strong><%= @full_name %></strong>
        <% else %>
          You’re not logged in yet. That’s why you’re here...
        <% end %>
      </span>

    </div><!-- /#hdr -->

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
