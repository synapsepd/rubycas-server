  <div class="row">
    <div class="span12">
      <% if @message %>
        <div class="alert <%= escape_html @message[:type] %>">
          <%= escape_html @message[:message] %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="span4 offset4">
      <%= erb(:_login_form, :layout => false) %>
    </div>
  </div>
</div>